@model WebApp.Models.LabModels

@{
	ViewBag.Title = "Lab3 - AJAX & Java Script";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/custom")
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<section id="loginForm">
@using(Html.BeginForm())
{
	@Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

	<fieldset>
        <legend>User Name and User ID</legend>
        <ol>
            <li>
                <div class="control-group">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName)
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </li>
            <li>
                <div class="control-group">
                    @Html.LabelFor(m => m.UserID)
                    @Html.TextBoxFor(m => m.UserID)
                    @Html.ValidationMessageFor(m => m.UserID)
                </div>
            </li>            
        </ol>
        <input type="submit" value="Calculate Modulus" class="btn btn-primary" />
    </fieldset>
}
</section>

@Html.Partial("_ModulusSumPartial", Model)

