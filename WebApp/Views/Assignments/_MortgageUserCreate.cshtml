@model WebApp.ViewModels.MortgageCalculatorViewModel

<fieldset>
    <legend>Create user</legend>
    <div class="control-group">
        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
        <div class="controls">
            @Html.TextBoxFor(m => m.UserName, new { @autocomplete = "off", @style = "width:150px;" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <button type="submit" name="action" id="saveuser" value="saveuser" class="btn btn-primary"><i class="icon-search icon-white"></i> Create User</button>
        </div>
    </div>
</fieldset>